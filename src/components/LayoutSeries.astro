---
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';

// Obtener posts de Keystatic
const reader = createReader(process.cwd(), keystaticConfig);
const keystaticPosts = await reader.collections.posts.all();


const SeriesPosts = await Astro.glob('/src/posts/series/*.md/'); 

const seriesPorTemporada = Object.values(SeriesPosts).reduce((acc, serie) => {
  const temporada = serie.path.split('/')[2] || 'desconocida'; // obtener la temporada
  if (!acc[temporada]) acc[temporada] = [];
  acc[temporada].push(serie);
  return acc;
}, {});

---
<html>
<head>
  <script src="./app.js"></script>
</head>
<body>
  {Object.entries(seriesPorTemporada).map(([temporada, series]) => (
    <div>
      <h2>{temporada}</h2>
      <ul class="w-10/12 h-auto text-white shadow-2xl shadow-white mx-auto flex flex-row flex-wrap justify-between items-center">
        {series.map((serie, index) => {
          const title = serie.title; 
          const description = serie.frontmatter.description;
          const video = serie.frontmatter.video; 
          const image = serie.frontmatter.image.url;

          return (
            <li class="post-item">
              <img src={image} alt={title} 
                   class="show-button w-56 cursor-pointer m-2" title={`${title}\n${description}`} data-index={index}>

              <dialog id={`alert-dialog-${index}`} class="w-4/5 h-full bg-[#13151a] text-white animate- ">
                <button class="text-3xl text-[#13151a] bg-emerald-500 fixed top-5 left-5 hover:text-red-500 hover:scale-150">X</button>

                <section class="w-full h-full flex flex-row">
                  <div class="w-6/12 flex flex-col">
                    <img src={image} alt={title} width="220px" height="auto" class="max-w-[220px]">
                  </div>

                  <div class="text-balance ml-12">
                    <h1 class="uppercase">{title}</h1>
                    <p>{description}</p>
                    <div class="video-container w-full h-1/2">
                      <iframe 
                        id={`video-${index}`} 
                        src={video} 
                        class="mt-10 w-3/4 h-full" 
                        allowfullscreen 
                        loading="lazy"
                        title={title}
                      ></iframe>
                    </div>
                  </div>
                </section>
              </dialog>
            </li>
          );
        })}
      </ul>
    </div>
  ))}
  
  <style>
    dialog::backdrop {
      background: linear-gradient(#000d, #000a);
    }
  </style>
</body>
</html>