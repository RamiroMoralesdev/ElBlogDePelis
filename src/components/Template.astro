---
import Aquaman from "../posts/peliculas/Aquaman.astro";
import Hola from "../posts/peliculas/hola.astro"
---

<script>
  const showButton = document.querySelector("#show-button");
  showButton.addEventListener("click", function () {
const alertDialog = document.querySelector("#alert-dialog");
alertDialog.showModal();

});
</script>


<dialog id="alert-dialog" class="w-5/6 h-4/5">
    <Aquaman></Aquaman>
    <button class="text-red-400" onclick="this.parentElement.close()">X</button>
  </dialog>
  
  <button id="show-button">
    <img src="/public/favicon.png" alt="" class="w-72">
  </button>


  
<dialog id="alert-dialog" class="w-5/6 h-4/5">
  <Hola></Hola>
  <button class="text-red-400" onclick="this.parentElement.close()">X</button>
</dialog>

<button id="show-button">
  <img src="https://depor.com/resizer/frYh9JMjTmkI_few0UyKK7WGvCU=/620x0/smart/filters:format(jpeg):quality(75)/cloudfront-us-east-1.images.arcpublishing.com/elcomercio/K3ZVO6CHINGL5OWBS45TZM4BRI.jpg" alt="" class="w-72">
</button>


<style>
  #alert-dialog::backdrop {
  background: linear-gradient(#000d, #000a);
}
</style>
