---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="las mejores películas y series en Full HD 1080p en español latino. Encuentra tus favoritas, desde clásicos hasta los últimos estrenos. " />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta http-equiv="Content-Security-Policy" content="frame-src https://drive.google.com //ok.ru/videoembed/ ">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		font-family: 'Jost', sans-serif;
		font-weight: bold;

	}
	html {
		background: #13151a;
		background-size: 224px;
	}

	::selection{
		background-color: yellow;
		color: black;
	}

</style>
